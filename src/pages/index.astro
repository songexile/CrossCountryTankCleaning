---
import Layout from "../layouts/Layout.astro";

import config from "../config.json";

import heroImg from "../assets/images/hero.jpg";
import watertowericon from "../assets/images/icon/water-tower.png";
import Form from "../components/Form.astro";
import ServiceCard from "../components/ServiceCard.astro";

const services = [
  {
    iconSrc: watertowericon.src,
    title: "STANDARD TANK CLEAN",
    subtitle: "Sludge vacuum + antibacterial dose",
    features: [
      "Removal of bottom sludge and sediment using a heavy duty trash pump",
      "Minimal water loss",
      "An antibacterial dose of food grade hydrogen peroxide is added once the vacuuming has been completed.",
      "This ensures that all viruses and bacteria in the water are eliminated.",
    ],
    buttonText: "Book Now",
  },
  {
    iconSrc: watertowericon.src,
    title: "PREMIUM TANK CLEAN",
    subtitle: "Comprehensive cleaning + advanced treatment",
    features: [
      "Removal of bottom sludge and sediment using a heavy duty trash pump",
      "Minimal water loss",
      "An antibacterial dose of food grade hydrogen peroxide is added once the vacuuming has been completed. This ensures that all viruses and bacteria in the water are eliminated.",
      "The water is then filtered (approx 30,000L) through our filtration system for one hour. Cross Country uses new fresh new clean filters on each site.",
      "Finally, the interior of the tank is fogged to sterilise all bare surfaces above the water line",
    ],
    buttonText: "Book Premium Service",
  },
  {
    iconSrc: watertowericon.src,
    title: "EXECUTIVE TANK CLEAN",
    subtitle: "Comprehensive cleaning + advanced treatment",
    features: [
      "All bottom sediment is vacuumed to waste, the tank is drained, all surfaces are scrubbed and sterilised. This option requires replacement water (POA)",
    ],
    buttonText: "Book Premium Service",
  },
  {
    iconSrc: watertowericon.src,
    title: "FILTER REPLACEMENT",
    subtitle: "",
    features: [
      "We replace all common water filters on most filtration systems and advise on A+ new installations",
    ],
    buttonText: "Book Now",
  },
];
---

<Layout title={config.businessName}>
  <section class="h-screen max-md:h-96 relative w-full">
    <img
      src={heroImg.src}
      alt="Hero image"
      class="object-cover w-full h-full"
    />
    <div
      class="absolute inset-0 bg-black bg-opacity-40 flex flex-col justify-center items-start p-8"
    >
      <h1 class="text-white text-4xl md:text-5xl font-bold mb-4 max-w-2xl">
        IF THE WATER IS HEALTHY, THE PEOPLE WILL BE PROVIDED FOR
      </h1>
      <button
        class="bg-primary text-white px-6 py-2 rounded-md hover:bg-primary-focus transition-colors"
      >
        Book Now
      </button>
    </div>
  </section>
  <section class="py-16 pb-32">
    <div class="max-w-screen-xl mx-auto flex items-center flex-col gap-8 px-4">
      <h1
        class="font-bold text-6xl text-blue-600 col-span-2 max-md:col-span-full"
      >
        <span class="">/</span> Our Services
      </h1>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        {services.map((service) => <ServiceCard {...service} />)}
      </div>
      <h1 class="text-3xl text-light">
        Call <a href={config.support[0].url} class="text-primary"
          >{config.support[0].name}
        </a>
      </h1>
    </div>
  </section>
  <section class="py-16 bg-gray-100 text-whte min-h-screen">
    <div class="max-w-screen-xl mx-auto flex items-center flex-col gap-8 px-4">
      <h1
        class="font-bold text-6xl text-primary col-span-2 max-md:col-span-full"
      >
        WHY CLEAN YOUR TANK
      </h1>
    </div>
  </section>
  <Form />
</Layout>
