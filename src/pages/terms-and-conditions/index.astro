---
import Layout from "../../layouts/Layout.astro";
import servicepic4 from "../../assets/images/servicepic4.png";
import Image from "astro/components/Image.astro";

const conditions = [
    "Clients are responsible for securing animals, in particular dogs, prior to the scheduled arrival of operators.",
    "All services requested and booked on a weekend or public holiday at the client's request will incur a $50 surcharge.",
    "Upon confirmation of your booking for our services, if we arrive onsite and are unable to perform our service due to restricted site access (e.g., locked gates), empty tanks, or undisclosed safety obstacles (e.g., power lines over the tank access), we reserve the right to recover travel costs.",
    "Full payment is due on completion of our services. A GST invoice will be generated and sent to the client's email for bank transfer.",
    "Our staff reserve the right to postpone our services due to adverse weather conditions and/or operational safety concerns."
];
---
<Layout title="Terms & Conditions" description="Review the terms and conditions for our services, including booking policies, surcharges, payment methods, and operational guidelines. Ensure you understand your responsibilities before scheduling a service.">
    <div class="bg-gray-100 min-h-screen py-12">
        <div class="container mx-auto px-4 sm:px-6 lg:px-8">
            <div class="bg-white rounded-lg overflow-hidden">
               
                <div class=" text-black py-6 px-6 sm:px-10">
                    <h1 class="text-3xl sm:text-4xl md:text-5xl font-extrabold">Terms & Conditions</h1>
                </div>
                <div class="p-6 sm:p-10">
                    <p class="text-gray-700 mb-6">By using our services, you agree to the following terms and conditions:</p>
                   
                    <ol class="list-decimal mt-8 pl-6 space-y-4">
                        {conditions.map((item) => (
                            <li class="bg-gray-100 rounded-lg p-2">
                                <p>{item}</p>
                            </li>
                        ))}
                    </ol>
                   
                    <div class="mt-8 p-4 bg-gray-50 rounded-lg">
                        <p class="text-gray-700">By engaging our services, you acknowledge that you have read, understood, and agree to be bound by these terms and conditions. If you have any questions or concerns, please contact us before scheduling a service.</p>
                    </div>
                </div>
            </div>
            <Image
                src={servicepic4}
                alt="Health and well-being"
                class="w-full h-64 object-cover rounded-lg shadow-lg"
            />
        </div>
    </div>
</Layout>