---
import astroLogo from "../assets/images/AstroMediaLogo.svg";
import { Image } from "astro:assets";
import { Icon } from "astro-icon/components";
import logoImg from "../assets/images/icon/cropped cross country logo no background.png";
import config from "../config.json";
---

<footer class="bg-black text-white py-12">
  <div class="container mx-auto px-4">
    <!-- Logo Section -->
    <!-- <div class="flex flex-col items-center mb-8">
      <Image src={logoImg} alt="logo" class="h-16 w-auto bg-white rounded-md mb-6" />
    </div> -->

    <!-- Links Section -->
    <div class="grid grid-cols-1 md:grid-cols-4 gap-8 text-center">
      <!-- Services -->
      <div>
        <h6 class="text-lg font-semibold mb-4">Services</h6>
        <ul class="space-y-2">
          {config.services.map((service) => (
            <li class="link link-hover">
              <a href={service.url}>{service.name}</a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Contact Us -->
      <div>
        <h6 class="text-lg font-semibold mb-4">Contact Us</h6>
        <ul class="space-y-2">
          {config.support.map((supportItem: any) => (
            <li>
              <a
                class="text-sm hover:text-primary transition-colors duration-200"
                href={supportItem.url}
              >
                {supportItem.name}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Socials -->
      <div>
        <h6 class="text-lg font-semibold mb-4">Socials</h6>
        <div class="flex justify-center space-x-4">
          {config.socials.map((social: any) => (
            <a
              class="hover:text-primary transition-colors duration-200"
              href={social.url}
              target="_blank"
              rel="noopener noreferrer"
            >
              <Icon name={social.icon} class="text-2xl" />
            </a>
          ))}
        </div>
      </div>

      <!-- Terms & Conditions -->
      <div>
        <h6 class="text-lg font-semibold mb-4">
          <a href="/terms-and-conditions" class="hover:underline">Terms & Conditions</a>
        </h6>
      </div>
    </div>

    <!-- Footer Bottom -->
    <div class="border-t border-white pt-8 mt-8 text-center">
      <p class="flex flex-wrap items-center justify-center gap-2 text-sm">
        Made possible by
        <a
          href="https://astromedia.dev"
          class="hover:text-accent transition-colors"
          target="_blank"
          rel="noopener noreferrer"
        >
          Astro Media
        </a>
        <Image
          class="w-5"
          src={astroLogo}
          width={10}
          height={10}
          alt="digital agency"
        />
      </p>
    </div>
  </div>
</footer>
