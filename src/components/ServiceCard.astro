
---
export interface Props {
    iconSrc: string;
    title: string;
    subtitle: string;
    features: string[];
    buttonText: string;
    link: string;
}
const { iconSrc, title, subtitle, features, buttonText, link } = Astro.props;
---
<div class="flex-1 bg-gray-100 p-6 rounded-lg flex flex-col h-full">
    <div class="flex items-center justify-center mb-4">
        <img
            src={iconSrc}
            alt={`${title} Icon`}
            class="w-12 h-12 text-blue-500"
        />
    </div>
    <h2 class="text-xl font-extrabold text-center mb-2">{title}</h2>
    <p class="text-sm text-gray-600 text-center mb-4">{subtitle}</p>
    <div class="flex flex-col text-sm text-gray-800 gap-2 flex-grow">
        {features.map((feature) => <li>{feature}</li>)}
    </div>
    <a target="_blank" href={link} class="mt-4">
        <button
            class="w-full bg-blue-800 font-semibold text-white py-2 px-4 rounded-lg hover:bg-blue-600 transition duration-300"
        >
            {buttonText}
        </button>
    </a>
</div>